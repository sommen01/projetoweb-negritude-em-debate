#Slide
  main
    #formGeral.container.d-flex.flex-column.col-md-6
      .container
        h2 &Aacute;lbum digital
      ul#myTab.nav.nav-pills(role='tablist')
        li.nav-item(role='presentation')
          button#dados-pessoais-tab.nav-link.active(data-bs-toggle='tab' data-bs-target='#dados-pessoais' type='button' role='tab' aria-controls='dados-pessoais' aria-selected='true') Dados Pessoais
        li.nav-item(role='presentation')
